<style>
#field {
	width:100%;
	height: 100%;
	position: absolute;
	left: 0px;
	top:0px;
	overflow:hidden;
}
</style>
<div id="field"></div>

<%= javascript_include_tag "starfield" %>
<script>
var container = document.getElementById('field');
var starfield = new Starfield();
starfield.stars = 200;
starfield.minVelocity = 0;
starfield.maxVelocity = 0;
starfield.initialise(container);
starfield.start();

</script>
